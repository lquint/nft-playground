{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-use-before-define": ["error", {"functions": false, "classes": false}],
        // suppress errors for missing 'import React' in files
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off"
    }
}
